@model IEnumerable<BusinessObject.Models.OrderObject>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Orders</h1>
@if (TempData["Message"] != null)
{
    <p class="text-center alert alert-info">@TempData["Message"]</p>
}
@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MemberId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequiredDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShippedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Freight)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequiredDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShippedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Freight)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "UpdateOrder", new { OrderID = item.OrderId }) |
                        @Html.ActionLink("Details", "GetOrderDetails", "Order", new { OrderId = item.OrderId, MemberID = item.MemberId }) |
                        @Html.ActionLink("Delete", "DeleteOrder", new { OrderID = item.OrderId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<p class="text-right">
    <a asp-action="CreateOrder" asp-controller="OrderDetail" class="btn btn-info">Create New Order +</a>
</p>
